<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.2//EN"
        "http://tuckey.org/res/dtds/urlrewrite3.2.dtd">
<urlrewrite>
    <rule>
        <!--拦截页面以/_开头的数据,作为转发给前端使用-->
        <from>^/item/(\d+).html$</from>
        <!-- to: 真实的URL -->
        <to type="forward">/product?productId=$1</to>
    </rule>


    <rule>
        <!--拦截页面以/_开头的数据,作为转发给前端使用-->
        <from>^/promotion/(\w+).html$</from>
        <!-- to: 真实的URL -->
        <to type="forward">/listFeaturedProducts?promotionType=$1</to>
    </rule>

</urlrewrite>